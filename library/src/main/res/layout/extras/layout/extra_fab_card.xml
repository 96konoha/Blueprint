<io.codetail.widget.RevealFrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="bottom|end">

    <android.support.v7.widget.CardView
            android:id="@+id/sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_marginEnd="@dimen/fab_margin"
            android:layout_marginBottom="@dimen/fab_margin"
            android:visibility="invisible"
            app:cardElevation="2dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:id="@+id/action_rate"
                    android:background="?selectableItemBackground"
                    android:padding="@dimen/cards_margin"
                    android:layout_gravity="start|center_vertical"
                    android:gravity="start|center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:id="@+id/action_rate_icon"
                        android:padding="@dimen/cards_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="ContentDescription,RtlSymmetry"/>

                <TextView
                        android:id="@+id/action_rate_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/cards_margin"
                        android:paddingLeft="@dimen/cards_margin"
                        android:paddingEnd="@dimen/fab_margin"
                        android:paddingRight="@dimen/fab_margin"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="@string/rate"
                        tools:ignore="RtlSymmetry"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/action_share"
                    android:background="?selectableItemBackground"
                    android:padding="@dimen/cards_margin"
                    android:layout_gravity="start|center_vertical"
                    android:gravity="start|center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:id="@+id/action_share_icon"
                        android:padding="@dimen/cards_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="ContentDescription,RtlSymmetry"/>

                <TextView
                        android:id="@+id/action_share_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/cards_margin"
                        android:paddingLeft="@dimen/cards_margin"
                        android:paddingEnd="@dimen/fab_margin"
                        android:paddingRight="@dimen/fab_margin"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="@string/share"
                        tools:ignore="RtlSymmetry"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/action_donate"
                    android:background="?selectableItemBackground"
                    android:padding="@dimen/cards_margin"
                    android:layout_gravity="start|center_vertical"
                    android:gravity="start|center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:id="@+id/action_donate_icon"
                        android:padding="@dimen/cards_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="ContentDescription,RtlSymmetry"/>

                <TextView
                        android:id="@+id/action_donate_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/cards_margin"
                        android:paddingLeft="@dimen/cards_margin"
                        android:paddingEnd="@dimen/fab_margin"
                        android:paddingRight="@dimen/fab_margin"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="@string/donate"
                        tools:ignore="RtlSymmetry"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/action_help"
                    android:background="?selectableItemBackground"
                    android:padding="@dimen/cards_margin"
                    android:layout_gravity="start|center_vertical"
                    android:gravity="start|center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:id="@+id/action_help_icon"
                        android:padding="@dimen/cards_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="ContentDescription,RtlSymmetry"/>

                <TextView
                        android:id="@+id/action_help_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/cards_margin"
                        android:paddingLeft="@dimen/cards_margin"
                        android:paddingEnd="@dimen/fab_margin"
                        android:paddingRight="@dimen/fab_margin"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="@string/section_help"
                        tools:ignore="RtlSymmetry"/>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</io.codetail.widget.RevealFrameLayout>