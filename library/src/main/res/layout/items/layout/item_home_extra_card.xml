<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/home_extra_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="Overdraw">

    <TextView
            android:id="@+id/more_apps_section_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:padding="@dimen/fab_margin"
            android:visibility="visible"
            android:clickable="false"
            android:text="@string/more_apps"/>

    <LinearLayout
            style="@style/HomeCardContent"
            android:id="@+id/home_extra_card_sub_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:minHeight="@dimen/md_listitem_height"
            android:paddingBottom="@dimen/cards_super_small_margin"
            android:orientation="horizontal"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">

        <jahirfiquitiva.libs.iconshowcase.ui.views.SquaredImageView
                android:id="@+id/home_extra_card_image"
                android:layout_width="@dimen/app_card_icon_size"
                android:layout_height="@dimen/app_card_icon_size"
                tools:ignore="ContentDescription"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/cards_content_margin_mini"
                android:gravity="center_vertical">

            <TextView
                    android:id="@+id/home_extra_card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    tools:text="Something"/>

            <TextView
                    android:id="@+id/home_extra_card_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingTop="@dimen/grid_padding_vertical"
                    tools:text="Something"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>