<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:gravity="end"
              android:paddingTop="@dimen/cards_margin"
              android:paddingStart="@dimen/cards_small_margin"
              android:paddingEnd="@dimen/cards_small_margin"
              android:paddingBottom="@dimen/cards_small_margin"
              android:clipToPadding="false"
              android:clipChildren="false"
              tools:ignore="PrivateResource">

    <android.support.v7.widget.AppCompatButton
            android:id="@+id/rate_btn"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rate"
            app:backgroundTint="?cardBackgroundColor"/>

    <android.support.v7.widget.AppCompatButton
            android:id="@+id/share_btn"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/share"
            app:backgroundTint="?cardBackgroundColor"/>

    <android.support.v7.widget.AppCompatButton
            android:id="@+id/donate_btn"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/donate"
            app:backgroundTint="?cardBackgroundColor"/>

</LinearLayout>