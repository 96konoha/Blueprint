<resources>

    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppThemeDark" parent="AppTheme.Base.Dark"/>

    <style name="AppThemeAmoled" parent="AppTheme.Base.Amoled"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/light_theme_primary</item>
        <item name="colorPrimaryDark">@color/light_theme_primary_dark</item>
        <item name="colorAccent">@color/light_theme_accent</item>
        <item name="colorControlHighlight">#42000000</item>

        <item name="android:textColor">@color/primary_text_light</item>
        <item name="android:textColorPrimary">@color/primary_text_light</item>
        <item name="android:textColorSecondary">@color/secondary_text_light</item>
        <item name="android:windowBackground">@color/light_bg</item>

        <item name="md_title_color">@color/md_dialog_title_light</item>
        <item name="md_content_color">@color/md_dialog_content_light</item>
        <item name="md_positive_color">@color/md_button_text_light</item>
        <item name="md_negative_color">@color/md_button_text_light</item>
        <item name="md_neutral_color">@color/md_button_text_light</item>
        <item name="md_background_color">@color/md_background_color_light</item>

        <item name="cardBackgroundColor">@color/card_light_background</item>

        <item name="actionModeStyle">@style/Responsive.ActionMode</item>
        <item name="actionModeCloseButtonStyle">@style/Responsive.ActionButton.CloseMode</item>

        <item name="toolbarStyle">@style/Responsive.Toolbar</item>
        <item name="toolbarNavigationButtonStyle">@style/Responsive.Toolbar.Button.Navigation</item>
        <item name="actionOverflowButtonStyle">@style/Responsive.ActionButton.Overflow</item>

        <item name="actionBarTheme">@style/Toolbar.AppCompat.Responsive.Light</item>
        <item name="actionBarPopupTheme">@style/Toolbar.Popup.AppCompat.Light</item>
    </style>

    <style name="AppTheme.Base.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/dark_theme_primary</item>
        <item name="colorPrimaryDark">@color/dark_theme_primary_dark</item>
        <item name="colorAccent">@color/dark_theme_accent</item>
        <item name="colorControlHighlight">#42ffffff</item>

        <item name="android:textColor">@color/primary_text_dark</item>
        <item name="android:textColorPrimary">@color/primary_text_dark</item>
        <item name="android:textColorSecondary">@color/secondary_text_dark</item>
        <item name="android:windowBackground">@color/dark_bg</item>

        <item name="md_title_color">@color/md_dialog_title_dark</item>
        <item name="md_content_color">@color/md_dialog_content_dark</item>
        <item name="md_positive_color">@color/md_button_text_dark</item>
        <item name="md_negative_color">@color/md_button_text_dark</item>
        <item name="md_neutral_color">@color/md_button_text_dark</item>
        <item name="md_background_color">@color/md_background_color_dark</item>

        <item name="cardBackgroundColor">@color/card_dark_background</item>

        <item name="actionModeStyle">@style/Responsive.ActionMode</item>
        <item name="actionModeCloseButtonStyle">@style/Responsive.ActionButton.CloseMode</item>

        <item name="toolbarStyle">@style/Responsive.Toolbar</item>
        <item name="toolbarNavigationButtonStyle">@style/Responsive.Toolbar.Button.Navigation</item>
        <item name="actionOverflowButtonStyle">@style/Responsive.ActionButton.Overflow</item>

        <item name="actionBarTheme">@style/Toolbar.AppCompat.Responsive.Dark</item>
        <item name="actionBarPopupTheme">@style/Toolbar.Popup.AppCompat.Dark</item>
    </style>

    <color name="amoled_bg">#0f0f0f</color>

    <style name="AppTheme.Base.Amoled" parent="AppTheme.Base.Dark">
        <item name="colorPrimary">#050505</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="cardBackgroundColor">#101010</item>
        <item name="android:windowBackground">@color/amoled_bg</item>
        <!-- <item name="material_drawer_background">#212121</item> -->
        <item name="md_background_color">#050505</item>
    </style>

    <style name="AppTheme.SplashScreen" parent="AppTheme.Base.LightLaunchScreen"/>

    <style name="AppTheme.Base.LightLaunchScreen">
        <item name="android:windowBackground">@drawable/splash_screen_light</item>
        <item name="colorPrimaryDark">@color/splash_light_status_bar</item>
        <item name="colorAccent">@color/splash_light_status_bar</item>
    </style>

    <style name="AppTheme.Base.DarkLaunchScreen">
        <item name="android:windowBackground">@drawable/splash_screen_dark</item>
        <item name="colorPrimaryDark">@color/splash_dark_status_bar</item>
        <item name="colorAccent">@color/splash_dark_status_bar</item>
    </style>

    <style name="AppTheme.Base.AmoledLaunchScreen">
        <item name="android:windowBackground">@drawable/splash_screen_amoled</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@android:color/black</item>
    </style>

    <style name="EmptyActivity" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

</resources>